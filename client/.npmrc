# Always use npm registry
registry=https://registry.npmjs.org/

# Do not allow lifecycle scripts (disables postinstall etc.)
ignore-scripts=true

# Enforce integrity checks from package-lock.json
package-lock=true

# Always verify checksums when installing
strict-ssl=true

# Save exact versions in package.json (avoid ^ or ~ that may pull unexpected updates)
save-exact=true

# Do not allow package-lock updates unless explicitly run
ci=true

# Avoid audit spam in CI (optional, if you prefer to run audits manually)
audit=true
fund=false

# Prevent npm from sending telemetry
send-metrics=false
